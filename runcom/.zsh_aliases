#!/usr/bin/env bash

# Shortcuts
alias reload='command clear; exec $SHELL'
alias rr='rm -rf'

# Directory listing
alias ls='ls -v --color=tty --group-directories-first'
alias ld="ls -lhd */"
alias lld="ld .*/"

# Django
alias djrun='python manage.py runserver'
alias djsu='python manage.py createsuperuser --email="owner@localhost.com"'
alias djmm='python manage.py makemigrations'
alias djmig='python manage.py migrate'
alias djsh='python manage.py shell'
alias djshp='python manage.py shell_plus'

# Recursive EOL replacement
alias dos2unixn='find . -type f -print0 | xargs -0 dos2unix'
alias unix2dosn='find . -type f -print0 | xargs -0 unix2dos'

# Python venv
alias va='if [[ ! -d "venv" && ! -L "venv" ]]; then; python -m venv --upgrade-deps ./venv; source ./venv/bin/activate; touch -a requirements.txt; pip install pip-tools; else; source ./venv/bin/activate; fi;'
alias vx='deactivate'

# List declared aliases, functions, paths
alias aliases="alias | sed 's/=.*//'"
alias functions="declare -f | grep '^[a-z].* ()' | sed 's/{$//'"
alias paths='echo -e ${PATH//:/\\n}'

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# Other
alias now='date +"%T"'
alias week='date +%V'
